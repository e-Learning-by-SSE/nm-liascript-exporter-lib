{
  "compilerOptions": {
    // By https://spin.atomicobject.com/2022/06/21/npm-package-typescript/
    "lib": ["es2022"], // ["es2022"] <-> ["es2017", "dom"]
    "module": "ESNext", // commonjs <-> esnext
    "target": "ES2022", //ES2022 <-> ES2015
    "moduleResolution": "node",

    "baseUrl": ".",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "paths": {
      "liascriptify": ["node_modules/@liascript/markdownify/dist/lib"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "allowJs": true
}
